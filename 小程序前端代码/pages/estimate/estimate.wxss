.estimateContain{
    height: 100vh;
    width: 100vw;
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
    background: white;
}
.mContain{
    height: 80vh;
    width: 100vw;
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
    border-bottom-left-radius: 50rpx;
    border-bottom-right-radius: 50rpx;
}

.topTip{
    margin-top: 5%;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-self: center;
    font-size: 23rpx;
}
.tip{
    width: 50%;
    display: flex;
    flex-direction: column;
}

.outBar{
    height: 1rpx;
    margin-top: 20rpx;
    width: 80%;
    border-radius: 10rpx;
    background-color:#DDDDDD;
}
.inBar{
    height: 4rpx;
    border-radius: 10rpx;
    background: #00C907;
}
.words{
    background: white;
    margin-top: 120rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 60rpx;
    font-weight: 1000;
    width: 80vh;
    border-radius: 30rpx;
}
.pipei {
    width: 30%;
    height: 18%;
    margin-top: 3vh;
}

.resultStyle{
    font-family:"webfont" !important;
    font-size:16px;font-style:normal;
    -webkit-font-smoothing: antialiased;
    -webkit-text-stroke-width: 0.2px;
    -moz-osx-font-smoothing: grayscale;
    font-size: 80rpx;
    margin-top: 0rpx;
}

.choose{
    width: 100%;
    margin-top: 15vh;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.result{
    display: flex;
    flex-direction: column;
    align-items: center;justify-content: center;
    width: 92%;
    height: 80%;
    border-radius: 5px;
    border-style: solid;
    border-width: 1.9rpx;
    border-color: #E3E3E3;
    background: white;
    margin-bottom: 8vh;
    /* margin-top: 14vh; */
}
.btn{
    width: 80%;
    margin-top: 40%;
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 70rpx;
    background: #28BFA0;
    color: white;
}

.btn_result{
    font-size: 32rpx;
    text-align: center;
    width: 100%;
    margin-top: 0vh;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.btn_button {
    margin-top: 50rpx;
    width: 80%;
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 70rpx;
    background: #28BFA0;
    color: white;
}

.btn_result button{
    width: 40%;
    height: 80rpx;
    background: #57CCA4;
    color: white;
}