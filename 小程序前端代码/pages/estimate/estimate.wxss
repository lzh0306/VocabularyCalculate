.estimateContain{
    height: 100vh;
    width: 100vw;
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
    background: #f5f5f5;
}

.outBar{
    height: 10rpx;
    width: 80%;
    margin-top: 18vh;
    border-radius: 10rpx;
    background-color: chartreuse;
}
.inBar{
    height: 10rpx;
    border-radius: 10rpx;
    background: red;
}
.words{
    background: white;
    margin-top: 20rpx;
    height: 100rpx;
    line-height: 100rpx;
    width: 350rpx;
    border-radius: 30rpx;
}

.choose{
    width: 100%;
    margin-top: 20vh;
    display: flex;
    flex-direction: row;
}

.choose button{
    width: 40%;
}

.score{
    background: white;
    margin-top: 20vh;
    height: 200rpx;
    line-height: 100rpx;
    width: 350rpx;
    border-radius: 30rpx;
}