.personalContainer {
    background-color: #f5f5f5;
    height: 100vh;
}

.userInfo {
    height: 200rpx;
    margin: 0 20rpx;
    background-color: white;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
}


.avatarUrl {
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
    margin: 50rpx 20rpx;
    border-style: solid;
    border-width: 2px;
    border-color: #E3E3E3;
}

.wel{
    margin-top: 10rpx; font-size: 30rpx;margin-left: 20rpx;color: rgb(94, 90, 90);
}
.userName{
    font-size: 40rpx;
     margin-left: 20rpx;
}
.functionList {
    width: 94%;
    margin-left: 22rpx;
    margin-top: 20rpx;
    border-radius: 30rpx;
    flex-direction: column;
}

.btnlist {
    height: 75rpx;
    margin-top: 4rpx;
    border-radius: 10rpx;
    background-color: white;
    font-size: 36rpx;
    line-height: 75rpx;
    padding: 10rpx;
}

.btnlist .more {
    float: right;
    color: rgb(94, 90, 90);
}

.signOut {
